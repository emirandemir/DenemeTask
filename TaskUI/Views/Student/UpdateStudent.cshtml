@model TaskUI.Controllers.Student

<h1>UpdateStudent</h1>

<link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />

<form method="post" class="table-bordered">

    <label>Name</label>
    <input type="text" name="Name" value="@Model.Name" />
    <br />
    <label>Surname</label>
    <input type="text" name="Surname" value="@Model.Surname" />
    <br />
    <label>Vize</label>
    <input type="number" name="Vize" value="@Model.Vize" />
    <br />
    <label>Final</label>
    <input type="number" name="Final" value="@Model.Final" />
    <br />
    <button type="submit" class="btn btn-dark">Güncelle</button>
</form>
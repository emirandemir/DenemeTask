@using TaskUI.Controllers
@model List<Student>


<link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
<h1>Student List</h1>
<table class="table table-bordered">
    <tr>
        <th>Ad</th>
        <th>Soyad</th>
        <th>Vize</th>
        <th>Final</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Name</td>
            <td>@item.Surname</td>
            <td>@item.Vize</td>
            <td>@item.Final</td>
            <td><a href="/Student/DeleteStudent/@item.ID" class="btn btn-danger">Sil</a></td>
            <td><a href="/Student/UpdateStudent/@item.ID" class="btn btn-primary">Güncelle</a></td>

        </tr>
    }
</table>
<a href="/Student/AddStudent/" class="btn btn-success">Öğrenci Ekle</a>